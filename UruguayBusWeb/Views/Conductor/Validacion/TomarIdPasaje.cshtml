
@{
    ViewBag.Title = "TomarIdPasaje";
}
<h2>TomarIdPasaje</h2>
<div class="row">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 mx-auto">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.Label("Numero del pasaje", htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.Editor("ID", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("ID", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Continuar" class="btn btn-default" />
                </div>
            </div>
        }
        @if (ViewBag.PasajeValido != null)
        {
            if (ViewBag.PasajeValido)
            {
                <h3 class="text-success">@ViewBag.mensaje</h3>
            }
            else
            {
                <h3 class="text-danger">@ViewBag.mensaje</h3>
            }
        }
    </div>
</div>


