@model UruguayBusWeb.Models.AsignarRolModel

@{
    ViewBag.Title = "Asignar Rol";
}

<h2 class="mt-3 mb-5">Asignar Rol</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h5 class="ml-3">Seleccione un rol</h5>
    <div class="form-horizontal row">
        <div class="form-group col-md-8 col-12">
            <div class="col-12">
                @Html.EnumDropDownListFor(model => model.Rol, new { @class = "custom-select col-12" })
                @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-4 col-12">
            <div class="col-12">
                <input type="submit" value="Asignar" class="col-12 btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-5">
    @Html.ActionLink("Volver al menú", "Index")
</div>
