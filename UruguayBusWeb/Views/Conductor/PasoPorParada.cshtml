@model UruguayBusWeb.Models.PasoParadaModel
@{
    ViewBag.Title = "Paso Por Parada";
    int i = (int) Session["idUltimaParada"];
    string Mostrar = "";
    if(i == -1)
    {
        Mostrar = "No a pasado por ninguna parada todavia";
    }
    else
    {
        Mostrar = "La última parada registrada fue la " + i +"°";
    }
    int siguienteParada = i+1;
}

<h2 class="mt-3">Paso por parada</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.idViaje, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.idUltimaParada, new { htmlAttributes = new { @class = "form-control" } })
        <hr />
        <div class="row">
            <div class="col-12 col-md-6">
                <h3 class=" text-center mb-3">@Mostrar</h3>
            </div>
            <div class="form-group col-12 col-md-6">
                <div>
                    <input type="submit" value="Registrar paso por parada: @siguienteParada" class="btn btn-primary col-12 my-auto" />
                </div>
            </div>
        </div>

    </div>
}
<br />
<div>
    @Html.ActionLink("Volver", "Index")
</div>
