@model IEnumerable<Share.Entities.Horario>

@{
    ViewBag.Title = "Listar Horarios";
}

<h2 class="mt-3">Listar Horarios</h2>

<p>
    @Html.ActionLink("Crear", "RegistrarHorario")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hora)
        </th>
        <th>
            Linea
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.linea.nombre)
        </td>
        <td>
            @Html.ActionLink("Modificar", "ModificarHorario", new { id = item.id })
        </td>
    </tr>
}

</table>
